<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PFE-Air Algérie</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="icon" href="../image/logo.png">
    <style>
        :root {
            --primary-color: #1a365d;
            --secondary-color: #2c5282;
            --accent-color: #dc2626;
            --gradient: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: #f8fafc;
            margin: 0;
            padding: 40px 20px;
            min-height: 100vh;
            color: var(--primary-color);
            position: relative;
        }

        /* Profil */
        .profile-section {
            position: fixed;
            top: 20px;
            right: 20px;
            cursor: pointer;
            z-index: 1000;
        }

        .profile-picture {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: var(--gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transition: transform 0.3s ease;
        }

        .profile-picture:hover {
            transform: scale(1.05);
        }

        .profile-menu {
            display: none;
            position: absolute;
            right: 0;
            top: 70px;
            background: white;
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
            border-radius: 12px;
            padding: 12px 0;
            min-width: 200px;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .profile-menu.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .profile-menu-item {
            padding: 14px 20px;
            font-size: 1rem;
            color: var(--primary-color);
            transition: 0.2s;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .profile-menu-item:hover {
            background: #f1f5f9;
            padding-left: 25px;
        }

        /* Header */
        .header {
            text-align: center;
            margin: 60px 0 40px;
        }

        .logo {
            height: 80px;
            margin-bottom: 20px;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        }

        h1 {
            font-size: 2.5rem;
            margin: 0;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        /* Zone de recherche */
        .search-group {
            max-width: 800px;
            margin: 0 auto 40px;
            display: flex;
            gap: 15px;
            position: relative;
        }

        #url {
            flex: 1;
            padding: 18px 25px;
            border: none;
            border-radius: 15px;
            font-size: 1.1rem;
            background: white;
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
        }

        #url:focus {
            outline: none;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1), 0 0 0 3px rgba(28, 100, 242, 0.1);
        }

        .btn {
            background: var(--gradient);
            color: white;
            padding: 18px 35px;
            border: none;
            border-radius: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        /* Résultats */
        .results-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            padding: 20px;
        }

        .result-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .result-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.12);
        }

        .result-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--gradient);
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: var(--primary-color);
            line-height: 1.4;
        }

        .card-link {
            color: var(--secondary-color);
            text-decoration: none;
            font-size: 0.95rem;
            display: block;
            margin-bottom: 20px;
            word-break: break-all;
            transition: color 0.2s;
        }

        .card-link:hover {
            color: var(--accent-color);
        }

        .card-date {
            font-size: 0.9rem;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 60px;
            padding: 25px;
            color: #64748b;
            font-size: 0.95rem;
            border-top: 1px solid #e2e8f0;
        }

        @media (max-width: 768px) {
            .search-group {
                flex-direction: column;
            }

            .btn {
                justify-content: center;
            }

            .results-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Profil -->
    <div class="profile-section" onclick="toggleMenu()">
        <div class="profile-picture"><i class="fa-solid fa-user"></i></div>
        <div class="profile-menu" id="profileMenu">
            <div class="profile-menu-item"><i class="fa-solid fa-key"></i>Changer mot de passe</div>
            <div class="profile-menu-item"><i class="fa-solid fa-right-from-bracket"></i>Déconnexion</div>
        </div>
    </div>

    <!-- En-tête -->
    <div class="header">
        <img src="../image/logo.png" alt="Logo" class="logo">
        <h1>SCRAPING</h1>
    </div>

    <!-- Recherche -->
    <div class="search-group">
        <input type="text" id="url" placeholder="Entrez votre requête...">
        <button class="btn"><i class="fa-solid fa-magnifying-glass"></i>Rechercher</button>
    </div>

    <!-- Résultats -->
    <div class="results-container">
        <!-- Exemple de carte -->
        <% items.forEach(item => { %>
        <div class="result-card">
            <div class="card-title"><%= item.information %></div>
            <%= item.source %>
            <a href="<%= item.lien %>" class="card-link"><%= item.lien %></a>
            <div class="card-date">
                <i class="fa-regular fa-calendar"></i>
                <span><%= item.date %></span>
            </div>
        </div>
        <% }); %>

        <!-- Ajouter d'autres cartes ici -->
    </div>

    <!-- Footer -->
    <div class="footer">
        © 2024 Air Algérie - Tous droits réservés
    </div>

    <script>
        function toggleMenu() {
            document.getElementById('profileMenu').classList.toggle('show');
        }

        window.onclick = function(e) {
            if (!e.target.closest('.profile-section')) {
                document.getElementById('profileMenu').classList.remove('show');
            }
        }
       
    </script>
</body>
</html>